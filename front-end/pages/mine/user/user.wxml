<view wx:if="{{user.nickname}}">
  <view class="form">
    <view class="form-item">
      <view class="form-item-label">
        <text>昵称</text>
      </view>
      <view class="list-item-input">
        <input maxlength="8" model:value="{{nickname}}" />
      </view>
    </view>
  </view>
  <view>
    <button size="default" type="primary" bindtap="submit" loading="{{loading}}">提交</button>
  </view>
</view>
