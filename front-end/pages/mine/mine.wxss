.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 32rpx;
  background: #2aae67;
  color: #fff;
}
.user-info {
  display: flex;
  align-items: flex-end;
}
.user-avatar {
  width: 100rpx;
  height: 100rpx;
}
.user-content {
  padding-left: 16rpx;
}
.user-role {
  font-size: 28rpx;
  opacity: 0.8;
}
.list {
  margin: 16rpx 0;
  background: #fff;
}
.list-item {
  display: flex;
  align-items: center;
}
.icon-large {
  padding: 0 32rpx;
}
.list-item-main {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx 26rpx 0;
  border-bottom: 2rpx solid #eee;
}
.list-item:last-child>.list-item-main {
  padding: 28rpx 32rpx 28rpx 0;
  border-bottom: none;
}
